@model MyView.Models.NightMarket

@{
    ViewData["Title"] = Model.Name+"詳細資料";
}

<h1>@ViewData["Title"]</h1>

<div class="card shadow p-5">

    <div class="row">
        <div class="col-lg-6">
            <img src="~/images/@(Model.Id).jpg" class="img-thumbnail">
        </div>
        <div class="col-lg-6">
            <h1> @Html.DisplayFor(model => model.Name)</h1>
            <p> @Html.DisplayFor(model => model.Address)</p>
            <a href="https://www.google.com.tw/maps/search/@Model.Address" target="_blank" class="btn btn-danger">看地圖</a>
        </div>

    </div>

</div>
<div class="mt-5 text-end">
     <a asp-action="Index">回夜市列表</a>
</div>
