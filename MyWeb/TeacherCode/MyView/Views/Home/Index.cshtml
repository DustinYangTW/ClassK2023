@model IEnumerable<MyView.Models.NightMarket>

@{
    ViewData["Title"] = "觀光夜市";
}

<h1 class="alert alert-primary text-center">@ViewData["Title"]</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-primary">新增夜市資枓</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
                @*   編號 *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
                @* 夜市名稱 *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                照片
            </th>
            <th>
                地圖
            </th>
            <th>資料管理</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <img src="images/@(item.Id).jpg" width="150">
                </td>
                <td>
                    <a href="https://www.google.com.tw/maps/search/@item.Address" target="_blank" class="btn btn-danger">看地圖</a>
                </td>


                <td>
                    @Html.ActionLink("編輯", "Edit", new { /* id=item.PrimaryKey */ },new{@class="btn btn-warning"})

                    <a href="/Home/Display/@item.Id">詳細資料</a> |
                    <a href="@Url.Action("Display")">詳細資料</a>
                    @Html.ActionLink("詳細資料", "Display", new { id=item.Id },new{@class="btn btn-info"})
                    <a asp-action="Display" asp-route-id="@item.Id" class="btn btn-info">詳細資料</a>
                    
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })

                    <a asp-action="Delete" class="btn btn-danger">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
