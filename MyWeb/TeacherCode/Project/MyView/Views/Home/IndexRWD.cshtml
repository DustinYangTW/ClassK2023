@model IEnumerable<MyView.Models.NightMarket>

@{
    ViewData["Title"] = "IndexRWD";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <img src="~/images/@(item.Id).jpg" class="img-thumbnail">
                <h1>@item.Name</h1>
                <p> @item.Address</p>
                <a href="https://www.google.com.tw/maps/search/@item.Address" target="_blank" class="btn btn-danger">看地圖</a>

            </div>
        </div>
    }
</div>